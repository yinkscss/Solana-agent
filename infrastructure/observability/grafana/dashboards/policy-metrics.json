{
  "uid": "solagent-policy-metrics",
  "title": "SolAgent â€” Policy Metrics",
  "tags": ["solagent", "policy"],
  "timezone": "browser",
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "title": "Policy Evaluation Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(policy_eval_total[5m]))",
          "legendFormat": "evaluations/s"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops" }
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 2,
      "title": "Allow / Deny / Require Approval",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(policy_eval_total) by (decision)",
          "legendFormat": "{{ decision }}"
        }
      ],
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 3,
      "title": "Evaluation Latency (P50 / P99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(policy_eval_duration_seconds_bucket[5m]))",
          "legendFormat": "P50"
        },
        {
          "expr": "histogram_quantile(0.99, rate(policy_eval_duration_seconds_bucket[5m]))",
          "legendFormat": "P99"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 4,
      "title": "Policy Cache Hit Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(policy_cache_hits_total[5m])) / (sum(rate(policy_cache_hits_total[5m])) + sum(rate(policy_cache_misses_total[5m])))",
          "legendFormat": "hit rate"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "min": 0, "max": 1 }
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 5,
      "title": "Policy Violations by Rule Type",
      "type": "barchart",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "sum(policy_eval_total{decision=\"deny\"}) by (rule)",
          "legendFormat": "{{ rule }}"
        }
      ],
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}

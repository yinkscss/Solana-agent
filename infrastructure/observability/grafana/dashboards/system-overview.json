{
  "uid": "solagent-system-overview",
  "title": "SolAgent â€” System Overview",
  "tags": ["solagent"],
  "timezone": "browser",
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "title": "Service Uptime",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{ job }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } }, "type": "value" }
          ],
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 2,
      "title": "Request Rate (per service)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m])) by (job)",
          "legendFormat": "{{ job }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 3,
      "title": "Error Rate (per service)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (job)",
          "legendFormat": "{{ job }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "color": { "mode": "palette-classic" } }
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 4,
      "title": "Latency P50 (per service)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, job))",
          "legendFormat": "{{ job }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 5,
      "title": "Latency P95 (per service)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 12 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, job))",
          "legendFormat": "{{ job }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 6,
      "title": "Latency P99 (per service)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 12 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, job))",
          "legendFormat": "{{ job }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 7,
      "title": "Active WebSocket Connections",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "sum(active_ws_connections) by (job)",
          "legendFormat": "{{ job }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short" }
      },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
